<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/register_heard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@+id/register_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/register_background" />

        <Button
            android:id="@+id/register_phone"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="#ff0000"
            android:text="手机号登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register_register"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/redborder"
            android:text="注册新账号"
            android:textColor="#ff0000"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/register_register_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_register">

            <TextView
                android:id="@+id/register_text_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="其他登录方式"
                android:textColor="#666666"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/register_text_register"
                android:background="#666666" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/register_text_register"
                android:background="#666666" />

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_register_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/account_icon_renren"
            android:clickable="true" />

    </RelativeLayout>

</LinearLayout>