<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="vertical"
        android:background="@drawable/login_background_introduce"
        android:weightSum="1">
        <ImageView
            android:id="@+id/fragment_right_qq"
            android:clickable="true"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/right_qq"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:id="@+id/fragment_right_xinlang"
            android:clickable="true"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/right_sina"
            android:layout_marginTop="10dp" />
        <ImageView
            android:id="@+id/fragment_right_tingxun"
            android:clickable="true"
            android:layout_width="260dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/tencent"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>